<Application x:Class="RivalsAccountManager.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style x:Key="LinkButtonStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="Blue"/>
            <Setter Property="TextDecorations" Value="Underline"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        <Style x:Key="DeleteButtonStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#FFF17474"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        <Style x:Key="StatsButtonStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#FF7CC0FF"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Application.Resources>
</Application>